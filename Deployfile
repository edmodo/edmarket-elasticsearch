include: Deployfile.defaults

containers:
  application:
    all:
      volumes:
        - host: /mnt/log/edmarket
          local: /var/log/edmarket
        - host: /mnt/log/nginx
          local: /var/log/nginx
      ports:
        - 9200
        - 9300

    qa:
      image: registry.edmodo.io/edmarket-search-qa

    production:
      image: registry.edmodo.io/edmarket-search-prod

    bahrain-production:
      image: me-registry.edmodo.io/edmarket-search-prod

  edmarket-docker-proxy:
    all:
      base: docker-proxy
      ports:
        - host: 9200
          local: 9200
        - host: 9300
          local: 9300

      environment:
        DOCKER_PROXY_STATUS_URL: :9200
        DOCKER_PROXY_STATUS_TIMEOUT: 90s

    qa:
      environment:
        DOCKER_PROXY_TAG: registry.edmodo.io/edmarket-search-qa
        DOCKER_PROXY_PORTS: 9200=9200,9300=9300

    production:
      environment:
        DOCKER_PROXY_TAG: registry.edmodo.io/edmarket-search-prod
        DOCKER_PROXY_PORTS: 9200=9200,9300=9300

    bahrain-production:
      image: me-registry.edmodo.io/docker-proxy
      environment:
        DOCKER_PROXY_TAG: me-registry.edmodo.io/edmarket-search-prod
        DOCKER_PROXY_PORTS: 9200=9200,9300=9300

  tracks-client: 
    all:
      image: registry.edmodo.io/tracks-client
      name: tracks-client
      ports:
        - host: 2808
          local: 2808
      volumes:
        - host: /mnt/log/td-agent-client
          local: /var/log/td-agent
    qa:
      environment:
        ENVIRONMENT: qa
        
    production:
      environment:
        ENVIRONMENT: prod

    bahrain-production:
      image: me-registry.edmodo.io/tracks-client
      environment:
        ENVIRONMENT: bahrain-prod

deploy:
  all:
    setup:
      - container: edmarket-docker-proxy
      - container: ami-base
      - container: tracks-client

    steps:
      - container: application
      - cmd: mkdir -p /mnt/log/edmarket/celery

  qa:
    elb: qa-market-elasticsearch
    autoscaling:
      autoscaling-group-od: qa-market-elasticsearch

  production:
    elb: prod-market-elasticsearch
    autoscaling:
      autoscaling-group-spot: prod-market-elasticsearch

  bahrain-production:
    elb: prod-market-elasticsearch
    autoscaling:
      autoscaling-group-spot: bahrain-prod-market-elasticsearch

